{
    "demo-button1": {
        "type": "button",
        "description": "To apply these settings, Cinnamon needs to be restarted. Click me!!!",
        "callback": "_restart_cinnamon",
        "tooltip": "Restart Cinnamon"
    },
    "head0": {
        "type": "header",
        "description": "General settings"
    },
    "pref_use_smooth_graphs": {
        "type": "checkbox",
        "default": true,
        "description": "Use smooth graphs"
    },
    "pref_align_tooltip_text_to_the_left": {
        "type": "checkbox",
        "default": true,
        "description": "Align tooltip text to the left",
        "tooltip": "For those of us who suffer from the stupidity of using a theme with tooltips aligned to the center. ¬¬"
    },
    "pref_custom_command": {
        "type": "entry",
        "default": "gnome-system-monitor",
        "description": "Custom command on applet click:"
    },
    "pref_refresh_rate": {
        "type": "spinbutton",
        "default": 1000,
        "min": 100,
        "max": 5000,
        "step": 100,
        "units": "milliseconds",
        "description": "Refresh rate:"
    },
    "pref_draw_background": {
        "type": "checkbox",
        "default": false,
        "description": "Draw graph background"
    },
    "pref_background_color": {
        "type": "colorchooser",
        "default": "rgba(0,0,0,0)",
        "dependency": "pref_draw_background",
        "indent": true,
        "description": "Background color:"
    },
    "pref_draw_border": {
        "type": "checkbox",
        "default": false,
        "description": "Draw graph border"
    },
    "pref_border_color": {
        "type": "colorchooser",
        "default": "rgba(0,0,0,0)",
        "dependency": "pref_draw_border",
        "indent": true,
        "description": "Border color:"
    },

    "sep1": {
        "type": "separator"
    },
    "head1": {
        "type": "header",
        "description": "CPU graph"
    },
    "pref_show_cpu_graph": {
        "type": "checkbox",
        "default": true,
        "description": "Show CPU graph:"
    },
    "pref_cpu_graph_width": {
        "type": "spinbutton",
        "default": 50,
        "min": 5,
        "max": 400,
        "step": 5,
        "units": "pixels",
        "description": "CPU graph width"
    },
    "head11": {
        "type": "header",
        "description": "CPU graph colors"
    },
    "pref_cpu_graph_color_user": {
        "type": "colorchooser",
        "indent": "true",
        "default": "rgba(252,232,79,1)",
        "description": "User:"
    },
    "pref_cpu_graph_color_nice": {
        "type": "colorchooser",
        "indent": "true",
        "default": "rgba(252,175,61,1)",
        "description": "Nice:"
    },
    "pref_cpu_graph_color_kernel": {
        "type": "colorchooser",
        "indent": "true",
        "default": "rgba(238,41,41,1)",
        "description": "Kernel:"
    },
    "pref_cpu_graph_color_iowait": {
        "type": "colorchooser",
        "indent": "true",
