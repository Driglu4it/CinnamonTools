{
    "pref_overlay_key": {
        "type": "keybinding",
        "description": "Keyboard shortcut to open and close the menu",
        "default": ""
    },
    "pref_woeid_lookup": {
        "type": "button",
        "description": "Get WOEID (Where On Earth IDentification)",
        "callback": "woeidLookup",
        "tooltip": "http://woeid.rosselliot.co.nz/"
    },
    "pref_woeid": {
        "type": "entry",
        "default": "",
        "description": "WOEID",
        "tooltip": "Where On Earth IDentification"
    },
    "pref_temperature_unit": {
        "type": "radiogroup",
        "default": "celsius",
        "description": "Temperature unit",
        "options": {
            "celsius": "celsius",
            "fahrenheit": "fahrenheit"
        }
    },
    "pref_temperature_high_first": {
        "type": "checkbox",
        "default": false,
        "description": "Show high temperature first in forecast"
    },
    "pref_wind_speed_unit": {
        "type": "combobox",
        "default": "kph",
        "description": "Wind speed unit",
        "options": {
            "kph": "kph",
            "mph": "mph",
            "m/s": "m/s",
            "knots": "knots"
        }
    },
    "pref_pressure_unit": {
        "type": "combobox",
        "default": "kPa",
        "description": "Atmospheric pressure unit",
        "options": {
            "mbar": "mbar",
            "in Hg": "in Hg",
            "mm Hg": "mm Hg",
            "psi": "psi",
            "at": "at",
            "atm": "atm",
            "Pa": "Pa",
            "kPa": "kPa"
        }
    },
    "pref_vertical_orientation": {
        "type": "checkbox",
        "default": false,
        "description": "Vertical orientation"
    },
    "pref_show_sunrise": {
        "type": "checkbox",
        "default": true,
        "description": "Show sunrise / sunset times"
    },
    "pref_show_common_sense_hours": {
        "type": "checkbox",
        "default": true,
        "description": "Display time in 24 hour format"
    },
    "pref_forecast_days": {
        "type": "spinbutton",
        "default": 5,
        "min": 2,
        "max": 7,
        "units": "days",
        "step": 1,
        "description": "Forecast length"
    },
    "pref_translate_condition": {
        "type": "checkbox",
        "default": false,
        "description": "Translate condition"
    },
    "pref_use_symbolic_icons": {
        "type": "checkbox",
        "default": true,
        "description": "Symbolic icons"
    },
    "pref_show_text_in_panel": {
        "type": "checkbox",
        "default": true,
        "description": "Display current temperature in panel"
    },
    "pref_show_comment_in_panel": {
        "type": "checkbox",
        "default": false,
        "description": "Show the weather condition (e.g., \"Windy\", \"Clear\") in the panel"
    },
    "pref_location_label_override": {
        "type": "entry",
        "default": "",
        "description": "Override location label"
    },
    "pref_refresh_interval": {
        "type": "spinbutton",
        "default": 30,
        "min": 1,
        "max": 1440,
        "units": "minutes",
        "step": 5,
        "description": "Update interval"
    },
    "pref_last_check": {
        "type": "generic",
        "default": 0
    },
    "pref_weather_data": {
        "type": "generic",
        "default": {}
    }
}
